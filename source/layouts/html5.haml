		%meta{:content => "yes", :name =>"apple-mobile-web-app-capable"}
		%meta{:content => "black", :name => "apple-mobile-web-app-status-bar-style"}
		%meta{:name => "keywords" , :content => "flavialarocca,fashion brand,zip,modular clothes,modular fashion,saving space,saving time,globetrotter,ecosustainable fashion,responsabile fashion,recycled textile, flavia la rocca, flr"}
