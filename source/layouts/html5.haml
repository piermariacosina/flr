		%meta{:property=>"og:site_name", :content=>"Flavialarocca"}
		%meta{:property=>"og:description", :content=>"We are crafting a completely new exciting website and digital image to enhance the value of the upcoming collection. In the meanwhile follow us on"}
		%meta{:property=>"fb:app_id", :content=>"557055554354175"}
		
		<!-- Favicons and touch icons -->
